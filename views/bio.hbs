<main class="page-main page-fullpage main-anim" id="mainpage">
  <div
    class="section section-home fullscreen-md fp-auto-height-responsive main-home section-centered"
    data-section="member"
  >
    <!-- Begin of section wrapper -->
    <div class="section-wrapper fullwidth with-margin v-center">
      <!-- content -->
      <div class="section-content anim">
        <div class="row justify-content-between">
          <div class="col-12 col-lg-7 text-left center-v">
            <div class="wrapper">
              <!-- title and description -->
              <div class="title-desc">
                <h2 class="display-4 display-title mb-4 anim-1">
                  {{member.memberName}}
                  <br />
                  <span class="text-lighter">
                    <!-- Action button -->
                    <div class="btns-action anim-3">
                      <a
                        class="btn btn-underline btn-primary"
                        href="{{member.linkedinUrl}}"
                      >
                        <span class="text">
                          {{member.memberPosition}}
                        </span>
                      </a>
                    </div>
                  </span>
                </h2>
                <p class="anim-2">
                  {{member.memberBio}}
                </p>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-5">
            <!-- content -->
            <div class="section-content center-vh anim">
              <!-- illustartion -->
              <div class="images text-center">
                <div class="img-frame-a">
                  <img
                    class="img"
                    src="/uploads/teams/{{member.imageUrl}}"
                    alt="Image"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End of section wrapper -->
  </div>
</main>